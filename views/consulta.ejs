<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Consulta Asociados</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    </head>
    <body>
        <header>
            <h1>Lista de Asociados registrados</h1>
        </header>
        <main>
            <section>
                <div class="container">
                    <a href="/create" class="btn btn-success">Consultar</a>
                    <table class="table table-bordered table-striped table-center mt-4">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Documento</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Tipo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% results.forEach ((user)=> { %>
                            <tr>
                                <td><%= user.delegado_id %></td>
                                <td><%= user.delegado_documento_identificacion %></td>
                                <td><%= user.delegado_nombres %></td>
                                <td><%= user.delegado_tipo %></td>
                                <td>
                                    <a href="/edit" class="btn btn-primary">Editar</a>
                                    <a href="/delete" class="btn btn-primary">Borrar</a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    </body>
</html>